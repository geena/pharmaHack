<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Jarvis</title>

	<!-- Bootstrap core CSS -->
	<link href="assets/css/bootstrap.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="assets/css/main.css" rel="stylesheet">
	<link href="assets/css/font-awesome.min.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<script src="assets/js/chart.js"></script>


	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->
  </head>

  <body>

  	<div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div id="hello" class="row">
          <%= link_to ("<h1>Jarvis</h1><h2>Physician</h2>").html_safe, 
          pharma_tech_index_path, { style: 'width:250px;display:inline-block;' } %>
          <div class="nav navbar-nav" style="padding-top:50px;">
            <li class="active"><%= link_to 'New Order', new_order_path %></li>
          </div>
        </div>
      </div>
  	</div>

    <br>
    <br>
    <br>
    <br>

  	<div id="green">
  		<div class="container">
  			<div class="row">
  				<div class="col-lg-7">
  					<h3>TRACKER</h3>
  				</div>
  			</div>
  		</div>
  	</div>

    <div class="container">
      <% @active_orders.each do |order| %>
      <div class="row centered mt grid">
        <div class="mt"></div>
        <div class="col-lg-4">
          <img src="data:image/jpeg;base64,<%= order.image %>" alt="" height="200" width="200">
        </div>
        <div class="col-lg-7">
          <h3>Order Name: <%= order.order_name %></h3>
          <h3>Patient Name: <%= order.patient_name %></h3>
          <h3>Status: <%= order.status %></h3>
          <h3>Dosage: <%= order.dosage %></h3>
        </div>
        <div class="col-lg-7">
        <ol class="progress-meter">
          <li class="progress-point done">Submitted</li><li class="progress-point todo">Approved</li><li class="progress-point todo">Administered</li>
        </ol>
      </div>
      </div>
      <% end %>
      <div class="row centered mt grid">
      </div>
    </div>

  	<div class="container">
  		<% @completed_orders.each do |order| %>
  		<div class="row centered mt grid">
  			<div class="mt"></div>
  			<div class="col-lg-4">
  				<img src="data:image/jpeg;base64,<%= order.image %>" alt="" height="200" width="200">
  			</div>
  			<div class="col-lg-7">
  				<h3>Order Name: <%= order.order_name %></h3>
  				<h3>Patient Name: <%= order.patient_name %></h3>
  				<h3>Status: <%= order.status %></h3>
  				<h3>Dosage: <%= order.dosage %></h3>
  			</div>
        <div class="col-lg-7">
        <ol class="progress-meter">
          <li class="progress-point done">Submitted</li><li class="progress-point done">Approved</li><li class="progress-point todo">Administered</li>
        </ol>
      </div>
  		</div>
  		<% end %>
  		<div class="row centered mt grid">
  		</div>
  	</div>

  	<div id="green">
  		<div class="container">
  			<div class="row">
  				<div class="col-lg-7">
  					<h3>REVIEW ORDERS</h3>
  				</div>
  			</div>
  		</div>
  	</div>


  	<% @draft_orders.each do |order| %>
  	<div id="skills">
  		<div class="container">
  			<div class="col-lg-4">
  				<%= link_to image_tag("data:image/jpeg;base64,#{order.image}", width: 200, height: 200), edit_order_path(order) %>
  			</div>
  			<div class="row centered">
  				<h3>Order Name: <%= order.order_name %></h3>
  				<h3>Patient Name: <%= order.patient_name %></h3>
  				<h3>Status: <%= order.status %></h3>
  				<h3>Dosage: <%= order.dosage %></h3>
  			</div><!-- /row -->
  		</div><!-- /container -->
  	</div><!-- /skills -->
  	<% end %>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="assets/js/bootstrap.js"></script>
</body>
</html>