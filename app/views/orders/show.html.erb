<div class="container">
<h1>Drug Information</h1>
<br>
<div class="container">

<p>
  <%= image_tag("data:image/jpeg;base64,#{@order.image}", width: 200, height: 200) %>
</p>

<p>
  <strong>Patient Name:</strong>
  <%= @order.patient_name %>
</p>

<p>
  <strong>Patient Date of Birth:</strong>
  <%= @order.dob %>
</p>
 
<p>
  <strong>Drug:</strong>
  <%= @order.order_name %>
</p>

<p>
  <strong>Route:</strong>
  <%= @order.route %>
</p>

<p>
  <strong>Dosage:</strong>
  <%= @order.dosage %>
</p>

<p>
  <strong>Frequency:</strong>
  <%= @order.frequency %>
</p>

<p>
  <strong>First Dose Priority:</strong>
  <%= @order.timestamp %>
</p>
</div>

<h1> <%= link_to "<button>Back</button>".html_safe, controller: 'physician' %> </h1>
</div>